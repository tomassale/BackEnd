<%- include('./partials/encabezado.ejs') %>
<button type="button" class="btn btn-info" id="btn"><a href="/registro" id="link">Registro</a></button>
<form action="/login" method="post" onsubmit="return post(this)" style="width: 500px; margin: auto; margin-top: 100px; font-size: 30px; background-color: rgb(236, 240, 236)">
  <div class="form-group">
    <label for="username">Nombre</label>
    <input type="username" class="form-control" name="username" aria-describedby="emailUsuario">
    <label for="contraseña">Contraseña</label>
    <input type="password" class="form-control" name="password" aria-describedby="contraseñaUsuario">
  </div>
  <button type="submit" class="btn btn-primary">Iniciar sesion</button>
</form>
<style>
  body{
    margin-bottom: 50px;
  }
  #link{
    color: white;
  }
  #btn{
    position: relative;
    top: 20px;
    left: 50px;
  }
</style>
